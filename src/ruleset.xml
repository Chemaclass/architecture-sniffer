<?xml version="1.0"?>
<ruleset name="Spryker ruleset"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                     http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="
                     http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        Asserting clean code architecture with Spryker framework.
    </description>

    <exclude-pattern>tests/_data</exclude-pattern>
    <exclude-pattern>tests/_output</exclude-pattern>
    <exclude-pattern>tests/_support</exclude-pattern>

    <!--
    <rule ref="rulesets/cleancode.xml" />

    <rule ref="rulesets/codesize.xml" />
    <rule ref="rulesets/controversial.xml" />
    <rule ref="rulesets/design.xml" />

    <rule ref="rulesets/naming.xml">
        <exclude name="LongVariable" />
    </rule>

    <rule ref="rulesets/unusedcode.xml" />
    -->
    <rule
            name="AccessRule"
            message="Access: {0}"
            class="ArchitectureSniffer\AccessRule" />

    <rule
            name="FactoryRule"
            message="Factories: {0}"
            class="ArchitectureSniffer\FactoryRule" />

    <rule
            name="ZedBusinessFacadeRule"
            message="Zed Business Layer - Facade: {0}"
            class="ArchitectureSniffer\ZedBusinessFacadeRule" />

    <rule
            name="ClientRule"
            message="Client: {0}"
            class="ArchitectureSniffer\ClientRule" />

    <rule
            name="BundleConstantsRule"
            message="Bundle Constants: {0}"
            class="ArchitectureSniffer\BundleConstantsRule" />

    <rule
            name="ControllerRule"
            message="Controller: {0}"
            class="ArchitectureSniffer\ControllerRule" />
<!--

    <rule
            name="OneNewInFactory"
            message="Avoid to use more than one new statement in a factory method '{0}'."
            class="ArchitectureSniffer\OneNewInFactory"
    />

    <rule
            name="MethodMustStartWithCreateInFactory"
            message="Method must start with create*.See method '{0}'."
            class="ArchitectureSniffer\MethodMustStartWithCreateInFactory"
    />

    <rule
            name="FacadeNotReturnInternals"
            message="A facade method must not return return anything else than simple types or transfer objects '{0}'."
            class="ArchitectureSniffer\FacadeNotReturnInternals"
    />

    <rule
            name="FacadeMustNotHaveProperties"
            message="A facade must not have any properties '{0}'."
            class="ArchitectureSniffer\FacadeMustNotHaveProperties"
    />
-->
</ruleset>
