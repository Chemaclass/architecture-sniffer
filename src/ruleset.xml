<?xml version="1.0"?>
<ruleset name="Spryker ruleset"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                     http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="
                     http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        Asserting clean code architecture with Spryker framework.
    </description>

    <exclude-pattern>tests/_data</exclude-pattern>
    <exclude-pattern>tests/_output</exclude-pattern>
    <exclude-pattern>tests/_support</exclude-pattern>

    <!-- CLIENT RULES -->
    <rule
            name="ClientRule"
            message="Client: {0}"
            class="ArchitectureSniffer\Client\ClientRule" />

    <!-- COMMON RULES -->
    <rule
            name="AccessRule"
            message="Access: {0}"
            class="ArchitectureSniffer\Common\AccessRule" />

<!--
    <rule
            name="BundleConstantsRule"
            message="Bundle Constants: {0}"
            class="ArchitectureSniffer\Common\BundleConstantsRule" />
-->

    <!-- CONTROLLER RULES -->
    <rule
            name="ControllerRule"
            message="Controller: {0}"
            class="ArchitectureSniffer\Controller\ControllerRule" />

    <!-- FACADE RULES -->
    <rule
            name="AllMethodsPublicInFacadeRule"
            message="Zed Business Layer - Facade: {0}"
            class="ArchitectureSniffer\Business\Facade\AllMethodsPublicInFacadeRule" />

    <rule
            name="ArgumentsFacadeRule"
            message="Zed Business Layer - Facade: {0}"
            class="ArchitectureSniffer\Business\Facade\ArgumentsFacadeRule" />

    <rule
            name="InterfaceFacadeRule"
            message="Zed Business Layer - Facade: {0}"
            class="ArchitectureSniffer\Business\Facade\InterfaceFacadeRule" />

    <rule
            name="NoLogicInFacadeRule"
            message="Zed Business Layer - Facade: {0}"
            class="ArchitectureSniffer\Business\Facade\NoLogicInFacadeRule" />

    <rule
            name="ReturnFacadeRule"
            message="Zed Business Layer - Facade: {0}"
            class="ArchitectureSniffer\Business\Facade\ReturnFacadeRule" />

    <rule
            name="ZedBusinessFacadeRule"
            message="Zed Business Layer - Facade: {0}"
            class="ArchitectureSniffer\Business\Facade\ZedBusinessFacadeRule" />

    <!-- FACTORY RULES -->
    <rule
            name="FactoryRule"
            message="Factories: {0}"
            class="ArchitectureSniffer\Factory\FactoryRule" />


