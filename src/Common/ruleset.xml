<?xml version="1.0"?>
<ruleset name="Spryker Common ruleset"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                     http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="
                     http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        This ruleset asserts common architecture conventions for Spryker (e)commerce platform.
    </description>

    <rule
            name="AccessRule"
            message="Access: {0}"
            class="ArchitectureSniffer\Common\AccessRule">

        <priority>1</priority>
    </rule>


    <!-- COMMON FACTORY RULES -->
    <rule
            name="GetContainNoNewFactoryRule"
            message="Factories: {0}"
            class="ArchitectureSniffer\Common\Factory\GetContainNoNewFactoryRule">

        <priority>1</priority>
    </rule>

    <rule
            name="FactoryMethodReturnInterfaceRule"
            message="{0}"
            class="ArchitectureSniffer\Common\Factory\FactoryMethodReturnInterfaceRule">

        <priority>2</priority>
    </rule>

    <rule
            name="CreateContainOneNewFactoryRule"
            message="{0}"
            class="ArchitectureSniffer\Common\Factory\CreateContainOneNewFactoryRule">

        <priority>1</priority>
    </rule>

    <rule
            name="NoLoopsInFactoryRule"
            message="Factories: {0}"
            class="ArchitectureSniffer\Common\Factory\NoLoopsInFactoryRule">

        <priority>1</priority>
    </rule>

    <rule
            name="OnlyGetAndCreateFactoryRule"
            message="Factories: {0}"
            class="ArchitectureSniffer\Common\Factory\OnlyGetAndCreateFactoryRule">

        <priority>1</priority>
    </rule>

</ruleset>
