<?xml version="1.0"?>
<ruleset name="Spryker Zed"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0
                     http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="
                     http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>
        Asserting clean code architecture with Spryker framework.
    </description>

    <!-- BUSINESS FACADE RULES -->
    <rule
            name="AllMethodsPublicInFacadeRule"
            message="Zed Business Layer - Facade: {0}"
            class="ArchitectureSniffer\Zed\Business\Facade\AllMethodsPublicInFacadeRule">

        <priority>1</priority>
    </rule>

    <rule
            name="FacadeArgumentsRule"
            message="Zed Business Layer - Facade: {0}"
            class="ArchitectureSniffer\Zed\Business\Facade\FacadeArgumentsRule">

        <priority>3</priority>
    </rule>

    <rule
            name="FacadeInterfaceRule"
            message="Zed Business Layer - Facade: {0}"
            class="ArchitectureSniffer\Zed\Business\Facade\FacadeInterfaceRule">

        <priority>1</priority>
    </rule>

    <rule
            name="FacadeNoLogicRule"
            message="Zed Business Layer - Facade: {0}"
            class="ArchitectureSniffer\Zed\Business\Facade\FacadeNoLogicRule">

        <priority>1</priority>
    </rule>

    <rule
            name="FacadeReturnValueRule"
            message="Zed Business Layer - Facade: {0}"
            class="ArchitectureSniffer\Zed\Business\Facade\FacadeReturnValueRule">

        <priority>1</priority>
    </rule>

    <rule
            name="FacadeRule"
            message="Zed Business Layer - Facade: {0}"
            class="ArchitectureSniffer\Zed\Business\Facade\FacadeRule">

        <priority>1</priority>
    </rule>

    <rule
            name="BridgeConstructorArgumentsRule"
            message="Zed Dependency Bridge - Bridge: {0}"
            class="ArchitectureSniffer\Zed\Dependency\Bridge\BridgeConstructorArgumentsRule">

        <priority>1</priority>
    </rule>

    <rule
        name="BridgeConstructorArgumentTypehintsRule"
        message="Zed Dependency Bridge - Bridge: {0}"
        class="ArchitectureSniffer\Zed\Dependency\Bridge\BridgeConstructorArgumentTypehintsRule">

        <priority>1</priority>
    </rule>

    <rule
        name="ZedPersistenceFactoryGetContainNoNewRule"
        message="Zed Persistence Layer - Factory: {0}"
        class="ArchitectureSniffer\Zed\Persistence\Factory\ZedPersistenceFactoryGetContainNoNewRule">

        <priority>1</priority>
    </rule>

    <rule
        name="ZedBusinessFactoryMethodReturnInterfaceRule"
        message="Zed Business Layer - Factory: {0}"
        class="ArchitectureSniffer\Zed\Business\Factory\ZedBusinessFactoryMethodReturnInterfaceRule">

        <priority>3</priority>
    </rule>

    <rule
        name="ZedDependencyProviderMethodNameRule"
        message="Zed DependencyProvider - DependencyProvider: {0}"
        class="ArchitectureSniffer\Zed\DependencyProvider\DependencyProviderMethodNameRule">

        <priority>3</priority>
    </rule>

</ruleset>
